<!DOCTYPE html>
<html>
  <head>
    <title>AskFm</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" %>
  </head>

  <body>
   
    <nav class="navbar">
        <div class="navbar-brand">
        <%= link_to root_path, class: "navbar-item" do %>
          <h1 class="title is-5">AskFm</h1>
        <% end %>
        <div class="navbar-burger burger" data-target="navbarExample">
            <span></span>
            <span></span>
            <span></span>
        </div>
       </div>


       <div id="navbarExample" class="navbar-menu">
        <div class="navbar-end">
          <div class="navbar-item">
          <div class="field is-grouped">
            
            <% if user_signed_in? %>
            <p class="control">
                <%= link_to "Profile", user_path(current_user), class:"button is-text" %>
            </p>

              <p class="control">
                <%= link_to "Questions (#{unanswered_questions_count})", questions_path, class:"button is-text" %>
              </p>

              <p class="control">
                <%= link_to "Settings", edit_user_registration_path, class:"button is-text" %>
              </p>

              <p class="control">
                <%= link_to "Logout", destroy_user_session_path, method: :delete, class:"button is-text" %>
              </p>

            <% else %>
              <p class="control">
                <%= link_to 'Sign In', new_user_session_path, class: "button is-text" %>
              </p>
              <p class="control">
                <%= link_to 'Sign Up', new_user_registration_path, class: "button is-text" %>
              </p>
            <% end %>
           
            </div>
          </div>
        </div>
      </div>


    </nav>
     <% if flash[:notice] %>
      <div class="notification is-primary global-notification">
        <p class="notice"><%= notice %></p>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="notification is-danger global-notification">
        <p class="alert"><%= alert %></p>
      </div>
    <% end %>
 
    <%= yield %>
  </body>
</html>
