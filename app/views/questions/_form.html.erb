<%= simple_form_for(@question, defaults: {label: false}) do |f| %>
  <%= f.error_notification%>
  <%= f.hidden_field :user_id %>
  <div class="field">
    <div class="control">
      <h5 class="subtitle">Ask @<%= @user.username%> question</h5>
    <%= f.input :question, input_html: { class: "textarea "}, wrapper: false, placeholder: "What?..Who?..When?" %>
   </div>
  </div>
  <%= f.button :submit, "Ask question", class: "button is-primary" %>
<% end %>
