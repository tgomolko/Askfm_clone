<section class="section is-index-q">
  <div class="container">
    <div class="columns">
      <div class="box">
        <div class="media-content">
          <% if @feeds.count < 1 %>
            <strong><p>You don't have any question now :(</p></strong>
          <% else %>    
             <strong><p>Feeds (<%= @feeds.count %>)</p></strong>
          <% end %>
        </div>
    </div>
  </div>
</section>

<% @feeds.each do |feed| %>
  <section class="section is-index-q">
    <div class="container">
      <div class="box">
        <strong><p><%= feed.question %></p></strong>
        <small><p> by <%= (User.find_by(id: feed.user_id)).name %></p></small>
        <%= time_ago_in_words(feed.updated_at) %> ago
      </div>
    </div>
  </section>
<% end %>

